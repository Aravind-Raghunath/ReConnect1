<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h4><%= pluralize(@post.errors.count,"error") %> prevented this Post from saving</h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area:body %>
  </p>
  <p class="text-center">
    <%= f.submit %>
  </p>
<% end %>
