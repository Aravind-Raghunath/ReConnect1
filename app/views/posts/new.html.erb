<div id="page_wrapper">
  <div class= "col-md-6 col-md-offset-3">
    <div class="row">
      <div class="panel panel-default">
        <div class= "panel-heading text-center">
          <h1 class= "header">New Post</h1>
        </div>
        <div class= "panel-body">
          <%= form_for :post, url: posts_path do |f| %>
            <% if @post.errors.any? %>
              <div id="errors">
                <h4><%= pluralize(@post.errors.count,"error") %> prevented this Post from saving</h4>
                <ul>
                  <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <p>
              <%= f.label :title %>
              <%= f.text_field :title %>
            </p>
            <p>
              <%= f.label :body %>
              <%= f.text_area:body %>
            </p>

            <p class="text-center">
              <button type="button" class="btn btn-primary"><%= f.submit %></button>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
