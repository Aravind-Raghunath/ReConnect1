<div class="row">
  <div class="medium-6 medium-centered columns">
    <h2 class="text-center">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% if resource.errors.messages.any? %>
	<div class="callout alert">
	  <%= devise_error_messages! %>
	</div>
      <% end %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
	<%= f.label :password, "New password" %>
	<% if @minimum_password_length %>
	  <em>(<%= @minimum_password_length %> characters minimum)</em>
	<% end %>
	<%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'New Password', required: true %>
      </div>

      <div class="field">
	<%= f.label :password_confirmation, "Confirm new password" %>
	<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', required: true %>
      </div>

      <div class="actions">
	<%= f.submit "Change my password", class: 'button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
